{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "concurrently \"yarn css:build\" \"remix build\"",
    "css:build": "npx postcss ./styles/**/*.css --base ./styles --dir ./src/app/styles --env production",
    "css:watch": "npx postcss ./styles/**/*.css --base ./styles --dir ./src/app/styles -w",
    "dev": "concurrently \"yarn css:watch\" \"remix dev\"",
    "postinstall": "remix setup node",
    "start": "remix-serve build"
  },
  "dependencies": {
    "@remix-run/react": "1.0.5",
    "@remix-run/serve": "1.0.5",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "remix": "1.0.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@remix-run/dev": "1.0.5",
    "@types/react": "17.0.24",
    "@types/react-dom": "17.0.9",
    "@types/uuid": "^8.3.3",
    "autoprefixer": "10.4.0",
    "concurrently": "6.4.0",
    "postcss": "8.4.3",
    "postcss-cli": "8.3.1",
    "tailwindcss": "2.2.19",
    "typescript": "4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
